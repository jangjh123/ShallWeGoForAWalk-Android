<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.register.RegisterActivity">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp"
            android:autoSizeMaxTextSize="26sp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/noto_sans_bold"
            android:gravity="start"
            android:letterSpacing="-0.06"
            android:text="@string/activity_register_title"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="38dp"
            android:autoSizeMaxTextSize="17sp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/noto_sans_medium"
            android:gravity="start"
            android:letterSpacing="-0.06"
            android:text="@string/activity_register_name"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:autoSizeMaxTextSize="15sp"
            android:autoSizeTextType="uniform"
            android:background="@null"
            android:fontFamily="@font/noto_sans_regular"
            android:gravity="start"
            android:includeFontPadding="false"
            android:letterSpacing="-0.06"
            android:maxLines="1"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/btn_boy"
            android:layout_width="64dp"
            android:layout_height="30dp"
            android:layout_marginEnd="6dp"
            android:autoSizeMaxTextSize="13sp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/box_radius_color_main"
            android:fontFamily="@font/noto_sans_medium"
            android:gravity="center"
            android:letterSpacing="-0.06"
            android:paddingHorizontal="20dp"
            android:text="@string/boy"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/et_name"
            app:layout_constraintEnd_toStartOf="@id/btn_girl"
            app:layout_constraintTop_toTopOf="@+id/et_name" />

        <TextView
            android:id="@+id/btn_girl"
            android:layout_width="64dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:autoSizeMaxTextSize="13sp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/box_radius_color_white"
            android:fontFamily="@font/noto_sans_medium"
            android:gravity="center"
            android:letterSpacing="-0.06"
            android:paddingHorizontal="20dp"
            android:text="@string/girl"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/et_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/et_name" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="16dp"
            android:background="@color/gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>